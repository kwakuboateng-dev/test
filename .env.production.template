# Production Environment Variables Template
# Copy this to .env and fill in your values

# Application
APP_NAME=Odoyewu API
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# Security (CRITICAL: Generate strong keys!)
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_STRING_MIN_32_CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://neondb_owner:npg_Xoe5gKtGiFq3@ep-cold-fog-abmczdvb-pooler.eu-west-2.aws.neon.tech/neondb?sslmode=require&channel_binding=require
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/odoyewu/app.log

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
