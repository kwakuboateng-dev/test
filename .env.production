# Production Environment Configuration

# CRITICAL: Set these in production
SECRET_KEY=GENERATE-A-STRONG-SECRET-KEY-HERE-USE-secrets.token_urlsafe(32)
ENVIRONMENT=production

# Database (use strong credentials in production)
POSTGRES_USER=nearlove_prod
POSTGRES_PASSWORD=CHANGE-THIS-TO-STRONG-PASSWORD
POSTGRES_DB=nearlove_prod
DATABASE_URL=postgresql://nearlove_prod:STRONG-PASSWORD@localhost:5432/nearlove_prod

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://nearlove.com,https://www.nearlove.com,https://app.nearlove.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security
HTTPS_ONLY=true
MAX_REQUEST_SIZE=10485760  # 10MB
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_DIR=/var/www/nearlove/uploads

# Push Notifications (Firebase)
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-sender-id

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# Session
SESSION_TIMEOUT_MINUTES=30
